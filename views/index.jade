doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Temperatura y Humedad
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    // HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src='js/html5shiv.js')
    // Fav and touch icons
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href='img/apple-touch-icon-144-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='114x114', href='img/apple-touch-icon-114-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href='img/apple-touch-icon-72-precomposed.png')
    link(rel='apple-touch-icon-precomposed', href='img/apple-touch-icon-57-precomposed.png')
    link(rel='shortcut icon', href='img/favicon.png')
    // Fuentes
    link(href='http://fonts.googleapis.com/css?family=Fontdiner+Swanky', rel='stylesheet', type='text/css')
    // jquery y bootstrap
    script(type='text/javascript', src='js/jquery.min.js')
    script(type='text/javascript', src='js/bootstrap.min.js')
    // Graficos
    script(src='http://code.highcharts.com/stock/highstock.js')
    // Scripts de los gauges
    script(src='js/gauges/raphael.2.1.0.min.js')
    script(src='js/gauges/justgage.1.0.1.min.js')
    // Hora y Fecha
    script(src='js/time/moment.js')
    // scripts propios
    script(src="/socket.io/socket.io.js")
    script(type='text/javascript', src='js/scripts.js')
  body
    // ***HOME PAGE***
    #home.content
      .container
        .row.clearfix
          .col-md-4.column
            // HORA Y FECHA
            .text-center
              .cf-td
                .cf-td-time.fuenteRara 12:00
                .cf-td-dd.fuenteRara
                  p.cf-td-day Monday, 
                  p.cf-td-date 1st October, 2013
            // RELOJ DE TEMPERATURA
            #temp1.container
          .col-md-8.column.addPadding
            // GRAFICO DE TEMPERATURA
            #chartTemp.container(style='width:100%; height:300px;')
        .row.clearfix
          .col-md-4.column
            // RELOJ DE HUMEDAD
            #hum1.container.addMargin
          .col-md-8.column
            // GRAFICO DE HUMEDAD
            #chartHum.container(style='width:100%; height:300px;')
    // ***ABOUT US***
    #about.panel
      .container
        .row.clearfix
          .col-md-12.column.text-center
            h1.text-center.fuenteRara(style='color:#000000') Dashboard de Temperatura y Humedad
            img(src='img/logoNaranja1.png')
            br
            br
            p.fuenteRara.text-center
              | Joel Gornati
            p.fuenteRara.text-center
              | joelgornati@gmail.com
        .row.clearfix.text-center.logos
          .col-md-12.column
            img(src='img/nodejs.png', height='100', width='100')
            img(src='img/socketio.gif', height='100', width='100')
            img(src='img/mongodb.png', height='100', width='80')
            img(src='img/mosca.png', height='100', width='70')
            img(src='img/arduino.png', height='100', width='100')
